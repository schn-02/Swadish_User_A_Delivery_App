<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearViewPager"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:id="@+id/simmer"
            android:layout_height="match_parent">


            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageslider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:background="#99999E"
                app:iss_auto_cycle="true"
                app:iss_text_align="center" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/showProductName"
                android:layout_height="wrap_content"
                android:background="#99999E"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/showProductUnit"
                android:layout_margin="10dp"
                android:textSize="10sp"
                android:background="#99999E"
                android:textStyle="bold"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/showProductPrice"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="#99999E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/showProductEdit"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/showProductEdit"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_show_item_view_home"
                    android:gravity="center"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#99999E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:id="@+id/simmer2"
            android:layout_height="match_parent">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageslider1"
                android:layout_width="match_parent"
                app:iss_auto_cycle="true"
                android:background="#99999E"
                android:layout_margin="10dp"
                app:iss_text_align="center"
                android:layout_height="200dp"/>



            <TextView
                android:layout_width="match_parent"
                android:id="@+id/showProductName1"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#99999E"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:id="@+id/showProductUnit1"
                android:layout_margin="10dp"
                android:textSize="10sp"
                android:background="#99999E"
                android:textStyle="bold"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/showProductPrice1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="start"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="#99999E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/showProductEdit1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/showProductEdit1"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_show_item_view_home"
                    android:gravity="center"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:backgroundTint="#99999E"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>


    </LinearLayout>



</LinearLayout>