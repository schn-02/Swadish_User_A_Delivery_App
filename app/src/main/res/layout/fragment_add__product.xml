<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Fragments.Add_Product">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:layout_marginTop="20dp"
        app:title="Add Product"
        app:titleTextColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/please_fill_product_details"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/yellow" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/product_title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColorHint="@color/white"
        android:paddingStart="20dp"
        android:background="@drawable/bg_add_product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <!-- Spinner for dropdown menu -->
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:entries="@array/unit_options"
            android:background="@drawable/bg_add_product"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:hint="Quantity (1 Kg, 1 Ltr)"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/bg_add_product" />

    </LinearLayout>

</LinearLayout>
